<section class="hero is-light">
  <div class="hero-body">
    <div class="container">
      <nav class="level">
        <div class="level-item has-text-left">
          <span class="title is-4"><%= @invitation.name %></span>
        </div>
      </nav>
    </div>
  </div>
</section>    
<div class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-3">
        <div class="box">
          <aside class="menu">
            <% if policy(@invitation).edit? %>
              <p class="menu-label">Administrativo</p>
              <ul class="menu-list">
                <li><%= link_to 'Editar', edit_invitation_path(@invitation) %></li>
                <li><%= link_to 'Apagar', invitation_path(@invitation), method: :delete, data: { confirm: 'Tem certeza que quer apagar este convite?' } %>
              </ul>
            <% end %>
          </aside>
        </div>
      </div>
      <div class="column">
        <div id="instruction-text" class="content">
          <h1>Criador</h1><%= raw(@invitation.user.name) %>
        </div>
        <div id="instruction-text" class="content">
          <h1>Competição</h1><%= raw(@invitation.competition.name) %>
        </div>
         <div id="instruction-text" class="content">
          <h1>Descrição</h1><%= raw(@invitation.description) %>
        </div>
      </div>
      <div class="column is-one-third">
        <div class="box">
          <p class="title">Convidados</p>
          <hr>
          <div class="columns is-multiline">
            <% if @invitation.guests.any? %>
              <% @invitation.guests.each do |guest| %>
                <div class="column has-text-centered is-one-third">
                  <%= link_to guest.user, :title => guest.user.name do %>
                    <%= image_tag_with_fallback(guest.user, 64) %>
                  <% end %>
                </div>
              <% end %>
            <% else %>
              <div class="column is-half  is-offset-one-quarter has-text-centered">
                <p>Ainda não convidou nenhum usuário para a Competição ):</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
  </div>
</div>        