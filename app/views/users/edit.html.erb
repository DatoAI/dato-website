<section class="section">
  <div class="container">
    <div class="heading">
      <h1 class="title">Editar Perfil</h1>
    </div>

    <%= form_for @user, html: { multipart: true } do |f| %>
      <%= f.label :name, class: 'label' %>
      <p class="control">
        <%= f.text_field :name, class: 'input', type: 'text' %>
      </p>

      <%= f.label :avatar, class: 'label' %>
      <p class="control"><%= f.file_field :avatar, accept: 'image/png,image/gif,image/jpeg' %></p>

      <%= f.label :bio, class: 'label' %>
      <p class="control">
        <%= f.text_area :bio, class: 'textarea', type: 'text' %>
      </p>

      <%= f.label :location, class: 'label' %>
      <p class="control">
        <%= f.text_field :location, class: 'input', type: 'text' %>
      </p>

      <%= f.label :company, class: 'label' %>
      <p class="control">
        <%= f.text_field :company, class: 'input', type: 'text' %>
      </p>

      <hr>

      <h2 class="title">Mudar de senha</h2>

      <%= f.label :current_password, class: 'label' %>
      <p class="control">
        <%= f.password_field :current_password, autocomplete: 'off', class: 'input' %>
      </p>

      <%= f.label :password, class: 'label' %>
      <p class="control">
        <%= f.password_field :password, autocomplete: 'off', class: 'input' %>
      </p>

      <% if current_user.is_admin %>
        <hr>

        <h2 class="title">Mudar permissÃµes</h2>

        <%= f.label :role, class: 'label' %>
        <p class="control">
          <%= f.select :role, options_for_select(@user.roles_by_permission(current_user), @user.role), {}, { class: 'input chosen' } %>
        </p>
      <% end %>
      
      <p class="control">
        <%= f.submit class: 'button is-success' %>
      </p>
      </div>
    <% end %>
  </div>
</section>
